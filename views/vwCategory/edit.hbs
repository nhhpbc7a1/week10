            <div class="form-group">
                <label for="txtCartName">Category name</label>
                <input type="text" name="CatName" id="txtCartNam" class="form-control" placeholder="" aria-describedby="helpId" value="{{this.category.CatName}}">
                <small id="helpId" class="text-muted">Help text</small>
            </div>
        </div>
        <div class="card-footer">
            <a name="" id="" class="btn btn-outline-success" href="/admin/categories" role="button">
